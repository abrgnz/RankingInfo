<%= form_for(@user) do |f| %>
  <div class="row">
    <div class='col-md-4'></div>
    <div class='form-group'>
      <div class='col-md-4'>
        <%= f.label :name, "Nombre" %>
        <%= f.text_field :name, class: 'form-control' %>
        <% if @user.errors[:name].present? %>
          <p class=" alert-danger" role="alert">
            <i class="fa fa-times-circle"></i>
            <%= @user.errors[:name].join(' ') %>
          </p>
        <% end %>
        <%= f.label :username, "Nombre de Usuario" %>
        <%= f.text_field :username, class: 'form-control' %>

        <% if @user.errors[:username].present? %>
          <p class=" alert-danger" role="alert">
            <i class="fa fa-times-circle"></i>
            <%= @user.errors[:username].join(' ') %>
          </p>
        <% end %>
        <%= f.label :password, "Contraseña" %>
        <%= f.password_field :password, class: 'form-control' %>
        <% if @user.errors[:password].present? %>
          <p class=" alert-danger" role="alert">
            <i class="fa fa-times-circle"></i>
            <%= @user.errors[:password].join(' ') %>
          </p>
        <% end %>
        <%= f.label :password_confirmation, "Confirmación de la Contraseña" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <% if @user.errors[:password_confirmation].present? %>
          <p class=" alert-danger" role="alert">
            <i class="fa fa-times-circle"></i>
            <%= @user.errors[:password_confirmation].join(' ') %>
          </p>
        <% end %>
        <%= f.label "Privilegios" %>
        <br>
        <%= f.select(:privileges, [['Admin', 1], ['Empleado', 2], ['Consultor', 3]]) %>

        <% if @user.errors[:privileges].present? %>
          <p class=" alert-danger" role="alert">
            <i class="fa fa-times-circle"></i>
            <%= @user.errors[:privileges].join(' ') %>
          </p>
        <% end %>
      </div>
    </div>
    <div class='col-md-4'></div>
    <div class='col-md-12 text-center'>
      <br>
      <%= f.submit "Guardar", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
