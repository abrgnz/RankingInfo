<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:arrendador_actual) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tenants.each do |tenant| %>
    <tr>
      <td><%= "#{tenant.nombre} #{tenant.apellido_paterno}" %></td>
      <td><%= tenant.arrendador_actual %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_tenant_path(tenant), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        tenant_path(tenant),
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Esta Seguro que Quiere Borrarlo?')) },
        :class => 'btn btn-xs btn-danger' %>


        <%= link_to t('.show', :default => t("helpers.links.show")),
        tenant_path(tenant),
        :class => 'btn btn-xs btn-info' %>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>
