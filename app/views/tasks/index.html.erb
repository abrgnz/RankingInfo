<div class="row">
  <div class="col-md-12 col-lg-12">
    <div class='col-md-12'>
      <h1 class="page-header">Tareas</h1>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-lg-3 col-md-6">

    <div class="panel panel-green">
      <%= link_to new_task_path do %>

      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-check-square-o fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @createdTasks %></div>
            <div>Creadas el DÃ­a de Hoy</div>
          </div>
        </div>
      </div>
        <div class="panel-footer">
          <span class="pull-left">Nueva Tarea</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-lg-3 col-md-6">
    <div class="panel panel-yellow">
      <%= link_to tasks_assigned_path do %>

      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-list-ul fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @myTasks %></div>
            <div>Asignadas</div>
          </div>
        </div>
      </div>
        <div class="panel-footer">
          <span class="pull-left">Ver Tareas</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
