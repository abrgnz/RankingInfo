<%- model_class = Trial -%>

<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>

    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-dashboard"></i> Dashboard
      </li>
    </ol>
  </div>
</div>
<!-- /.row -->


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:actor_nombre) %></th>
      <th><%= model_class.human_attribute_name(:actor_apellido_paterno) %></th>
      <th><%= model_class.human_attribute_name(:actor_apellido_materno) %></th>
      <th><%= model_class.human_attribute_name(:abogado_patrono_nombre) %></th>
      <th><%= model_class.human_attribute_name(:abogado_patrono_apellido_paterno) %></th>
      <th><%= model_class.human_attribute_name(:abogado_patrono_apellido_materno) %></th>
      <th><%= model_class.human_attribute_name(:demandado_nombre) %></th>
      <th><%= model_class.human_attribute_name(:demandado_apellido_paterno) %></th>
      <th><%= model_class.human_attribute_name(:demandado_apellido_materno) %></th>
      <th><%= model_class.human_attribute_name(:tipo_juicio) %></th>
      <th><%= model_class.human_attribute_name(:numero_expediente) %></th>
      <th><%= model_class.human_attribute_name(:juzgado) %></th>
      <th><%= model_class.human_attribute_name(:distrito_judicial_string) %></th>
      <th><%= model_class.human_attribute_name(:ultima_actuacion) %></th>
      <th><%= model_class.human_attribute_name(:estado_procesal) %></th>
      <th><%= model_class.human_attribute_name(:fecha_vencimiento_termino) %></th>
      <th><%= model_class.human_attribute_name(:comentario) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @trials.each do |trial| %>
    <tr>
      <td><%= link_to trial.id, trial_path(trial) %></td>
      <td><%= trial.actor_nombre %></td>
      <td><%= trial.actor_apellido_paterno %></td>
      <td><%= trial.actor_apellido_materno %></td>
      <td><%= trial.abogado_patrono_nombre %></td>
      <td><%= trial.abogado_patrono_apellido_paterno %></td>
      <td><%= trial.abogado_patrono_apellido_materno %></td>
      <td><%= trial.demandado_nombre %></td>
      <td><%= trial.demandado_apellido_paterno %></td>
      <td><%= trial.demandado_apellido_materno %></td>
      <td><%= trial.tipo_juicio %></td>
      <td><%= trial.numero_expediente %></td>
      <td><%= trial.juzgado %></td>
      <td><%= trial.distrito_judicial_string %></td>
      <td><%= trial.ultima_actuacion %></td>
      <td><%= trial.estado_procesal %></td>
      <td><%= trial.fecha_vencimiento_termino %></td>
      <td><%= trial.comentario %></td>
      <td><%=l trial.created_at %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_trial_path(trial), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        trial_path(trial),
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-xs btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
new_trial_path,
:class => 'btn btn-primary' %>
