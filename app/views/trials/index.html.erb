<div class="row">
  <div class="col-md-12 col-lg-12">
    <div class='col-md-12'>
      <h1 class="page-header">Juicios</h1>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col-lg-3 col-md-6">

    <div class="panel panel-green">
      <%= link_to new_trial_path do %>

      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-briefcase fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @createdTrials %></div>
            <div>Creados el DÃ­a de Hoy</div>
          </div>
        </div>
      </div>
        <div class="panel-footer">
          <span class="pull-left">Nuevo Juicio</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-blue">
      <%= link_to trials_search_path do %>

      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-search fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @trials %></div>
            <div>En la base de datos</div>
          </div>
        </div>
      </div>
        <div class="panel-footer">
          <span class="pull-left">Buscar Juicio</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-red">
      <%= link_to trials_calendar_path do %>

      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-calendar fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @updatedTrials %></div>
            <div>Proximos a Vencerse</div>
          </div>
        </div>
      </div>
        <div class="panel-footer">
          <span class="pull-left">Ver Calendario</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-lg-3 col-md-6">
    <div class="panel panel-yellow">
      <%= link_to trials_assigned_path do %>

      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-list-ul fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @myTrials %></div>
            <div>Asignados</div>
          </div>
        </div>
      </div>
        <div class="panel-footer">
          <span class="pull-left">Ver Juicios</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
