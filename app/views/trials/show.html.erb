<%- model_class = Trial -%>
<br><br>
<div class="row">
  <div class='col-md-4 col-xs-4 text-center'>
    <%= link_to t('.back', :default => t("helpers.links.back")),
    trials_path, :class => 'btn btn-default'  %>

  </div>
  <div class='col-md-4 col-xs-4 text-center'>
    <p class="title">Viendo Juicio</p>
  </div>

