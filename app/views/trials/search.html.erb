<%- model_class = Trial -%>

<div class="row">
  <div class='col-md-12'>
    <h1 class="page-header">Busqueda Juicios</h1>
  </div>
</div>
<div class='row'>
<%= form_tag trials_search_path, :method => 'get' do %>

<div class='col-md-6 col-xs-8'>
  <%= text_field_tag :search, nil ,:class => 'form-control'%>
</div>
<div class='col-md-3 col-xs-4'>
  <%= submit_tag "Search", :name => nil, :class => 'btn btn-default' %>
</div>
<% end %>
<br><br>
<div class='col-md-12'>
  <% if params[:search] %>
<h3>Resultados</h3>
<% else %>
<h3>Creados Recientemente</h3>
<% end %>
</div>
<div class='col-md-12'>
  <%= render 'quick_table', model_class: model_class%>
</div>

<% if @trials.blank? %>
<div>
  <p><strong>No se encontraron Juicios</strong></p>
</div>
<% end %>
</div>
<div class='row'>
<div class="divider"></div>
<div class='row'>
  <div class='col-md-4 col-xs-4 text-center'>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), trials_path, :class => 'btn btn-default' %>
  </div>
  <div class="col-md-4 col-xs-4"></div>
  <div class='col-md-4 col-xs-4 text-center'>
  </div>
</div>
<br>
</div>
